<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLayoutBG"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.yatrashare.fragments.BookingConfirmationFragment">

    <TextView
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:text="@string/owner_approval"
        android:textColor="#818181"
        android:visibility="gone" />

    <TextView
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="@string/callOwner"
        android:textColor="#818181"
        android:visibility="gone" />

    <TextView
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="Your Ride is published Successfully"
        android:textColor="#818181" />

    <TextView
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="@string/contactyatrashare"
        android:textColor="#818181" />

    <TextView
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="@string/nicejourney"
        android:textColor="#818181" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="#818181"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_ViewPublishedRides"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/search_button_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/viewmyrides"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>