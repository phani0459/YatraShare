<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/relative_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dip"
                android:src="@drawable/user_64"/>

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="8dip"
                android:text="User"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60">

            <TextView
                android:id="@+id/ride_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="01/13/2016 Wednesday"
                android:textColor="@color/colorRideTextDayTime"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/ride_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_day_text"
                android:text="1.30 am"
                android:textColor="@color/colorRideTextDayTime"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ride_car_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_time_text"
                android:text="Audi Benz"
                android:textColor="@color/colorRideTextDayTime"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/ride_from_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_car_text"
                android:layout_marginTop="8dip"
                android:drawableLeft="@drawable/ic_ride_from"
                android:drawablePadding="8dip"
                android:text="Hitech City"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/ride_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_from_text"
                android:layout_marginTop="8dip"
                android:drawableLeft="@drawable/ic_ride_to"
                android:drawablePadding="8dip"
                android:text="JNTU"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center">

            <TextView
                android:id="@+id/ride_fare_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2522"
                android:textColor="@color/colorRideTextDayTime"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/ride_seat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_fare_text"
                android:text="/seat"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/ride_available_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_seat_text"
                android:layout_marginTop="8dip"
                android:text="2"
                android:textColor="@color/colorRideAvailable"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/ride_seats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_available_text"
                android:text="seats"
                android:textSize="16sp"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D6D6"/>
</LinearLayout>